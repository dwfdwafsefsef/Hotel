<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.spring.hotel.ReplyMapper">
<!-- namespace : dao 클래스의 sqlSession과 연결하기 위한 키로 사용 -->
	
	<!-- 댓글 등록 -->
	<insert id="insert">
		INSERT INTO ${reply}
		VALUES (REPLY_SEQ.NEXTVAL, #{memberId}, #{boardId}, #{replyContent}, SYSDATE)
	</insert>
	
	<!-- 댓글 전체검색 -->
	<select id="select_all" resultType="ReplyVO">
		SELECT * FROM ${reply}
		WHERE ${boardId} = #{boardId}
		ORDER BY ${replyId}
	</select>
	
	<!-- 댓글 수정 -->
	<update id="update">
		UPDATE ${reply} SET
		${replyContent} = #{replyContent}, ${replyDateCreated} = SYSDATE
		WHERE ${replyId} = #{replyId}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="delete">
		DELETE FROM ${reply}
		WHERE ${replyId} = #{replyId}
	</delete>
	
	<!-- 내 작성 댓글 수 조회 -->
	<select id="select_reply_cnt" resultType="Integer">
		SELECT COUNT(*) FROM ${reply}
		WHERE ${memberId} = #{memberId}
	</select>
	
</mapper>